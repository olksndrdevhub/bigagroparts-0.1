server {
    listen 80;
    server_name bigagroparts.com;
    server_tokens off;

    location /.well-known/acme-challenge/ {
        root /etc/nginx/certs;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name bigagroparts.com;
    server_tokens off;

    ssl_certificate /etc/letsencrypt/live/bigagroparts.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bigagroparts.com/privkey.pem;
#    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 100M;

    location / {
        proxy_pass http://bigagroparts.com;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
    }
}